@model List<ASP_Dot_Net_MVC_CRUD_Template.Models.Item>
@{
    ViewData["Title"] = "Item List";
}

<h2>Items</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Item</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>String</th>
            <th>Number</th>
            <th>Decimal</th>
            <th>Bool</th>
            <th>Char</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.SampleString</td>
            <td>@item.SampleNumber</td>
            <td>@item.SampleDecimal</td>
            <td>@item.SampleBool</td>
            <td>@item.SampleCharacter</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
